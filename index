            </p>
        </div>
    </div>

    <script>
        let combinedChart, facebookChart, tiktokChart;

        // ข้อมูลแบบ Dynamic - รองรับทั้ง 12 เดือน
        let chartData = {
            facebook: [
                { month: 'ม.ค. 68', leads: 119, bookings: 1, quality: 34, qualityPercent: 28.6 },
                { month: 'ก.พ. 68', leads: 202, bookings: 3, quality: 35, qualityPercent: 17.3 },
                { month: 'มี.ค. 68', leads: 59, bookings: 0, quality: 20, qualityPercent: 33.9 },
                { month: 'เม.ย. 68', leads: 80, bookings: 1, quality: 32, qualityPercent: 40.0 },
                { month: 'พ.ค. 68', leads: 45, bookings: 1, quality: 20, qualityPercent: 44.4 },
                { month: 'มิ.ย. 68', leads: 0, bookings: 0, quality: 0, qualityPercent: 0 }
            ],
            tiktok: [
                { month: 'เม.ย. 68', leads: 5, bookings: 0, quality: 0, qualityPercent: 0 },
                { month: 'พ.ค. 68', leads: 19, bookings: 2, quality: 4, qualityPercent: 21.1 },
                { month: 'มิ.ย. 68', leads: 0, bookings: 0, quality: 0, qualityPercent: 0 }
            ]
        };

        // ข้อมูลการจองรถ
        const bookingData = {
            facebook: [
                { customer: 'Saku Wan', car: 'Yaris', date: '31/1/2568', sales: 'วรารัตน์' },
                { customer: 'มัง ช่างลุกมาน', car: 'Revo D', date: '10/2/2568', sales: 'มูฮำหมัด' },
                { customer: 'Wawee Sensana', car: 'Ativ', date: '26/2/2568', sales: 'อานิสา' },
                { customer: 'Saifu', car: 'Revo Z', date: '27/2/2568', sales: 'ชาริณีย์' },
                { customer: 'ลูกค้าเดือนเมษายน', car: '(รอข้อมูล)', date: 'เมษายน 2568', sales: '(รอข้อมูล)' },
                { customer: 'ลูกค้าเดือนพฤษภาคม', car: '(รอข้อมูล)', date: 'พฤษภาคม 2568', sales: '(รอข้อมูล)' }
            ],
            tiktok: [
                { customer: 'Wai Suwaibah', car: 'Ativ', date: '4/5/2568', sales: 'อานิสา' },
                { customer: 'ASTON', car: 'Yaris cross', date: '13/5/2568', sales: 'วรารัตน์' }
            ]
        };

        // ชื่อเดือนภาษาไทยทั้ง 12 เดือน
        const thaiMonthNames = [
            'ม.ค. 68', 'ก.พ. 68', 'มี.ค. 68', 'เม.ย. 68', 'พ.ค. 68', 'มิ.ย. 68',
            'ก.ค. 68', 'ส.ค. 68', 'ก.ย. 68', 'ต.ค. 68', 'พ.ย. 68', 'ธ.ค. 68'
        ];

        const thaiMonthFullNames = [
            'มกราคม', 'กุมภาพันธ์', 'มีนาคม', 'เมษายน', 'พฤษภาคม', 'มิถุนายน',
            'กรกฎาคม', 'สิงหาคม', 'กันยายน', 'ตุลาคม', 'พฤศจิกายน', 'ธันวาคม'
        ];

        // ฟังก์ชันคำนวณสถิติแบบ Dynamic
        function calculateStats() {
            const fbStats = calculatePlatformStats(chartData.facebook);
            const ttStats = calculatePlatformStats(chartData.tiktok);
            
            return {
                facebook: fbStats,
                tiktok: ttStats,
                total: {
                    leads: fbStats.totalLeads + ttStats.totalLeads,
                    quality: fbStats.totalQuality + ttStats.totalQuality,
                    bookings: fbStats.totalBookings + ttStats.totalBookings,
                    months: Math.max(fbStats.activeMonths, ttStats.activeMonths),
                    qualityPercent: ((fbStats.totalQuality + ttStats.totalQuality) / (fbStats.totalLeads + ttStats.totalLeads) * 100) || 0
                }
            };
        }

        function calculatePlatformStats(data) {
            const totalLeads = data.reduce((sum, month) => sum + month.leads, 0);
            const totalQuality = data.reduce((sum, month) => sum + month.quality, 0);
            const totalBookings = data.reduce((sum, month) => sum + month.bookings, 0);
            const activeMonths = data.filter(month => month.leads > 0).length;
            const qualityPercent = totalLeads > 0 ? (totalQuality / totalLeads * 100) : 0;
            const conversionPercent = totalLeads > 0 ? (totalBookings / totalLeads * 100) : 0;
            const avgPerMonth = activeMonths > 0 ? Math.round(totalLeads / activeMonths) : 0;

            return {
                totalLeads, totalQuality, totalBookings, activeMonths,
                qualityPercent: Math.round(qualityPercent * 10) / 10,
                conversionPercent: Math.round(conversionPercent * 100) / 100,
                avgPerMonth
            };
        }

        // ฟังก์ชันอัพเดทข้อมูลทั้งหมด
        function updateAllDisplays() {
            const stats = calculateStats();
            updateOverviewDisplay(stats);
            updateFacebookDisplay(stats.facebook);
            updateTikTokDisplay(stats.tiktok);
            updateCharts();
            updateMonthlyDetails();
            updateBookingLists();
        }

        function updateOverviewDisplay(stats) {
            // อัพเดทตัวเลขหลัก
            document.getElementById('overviewTotal').textContent = stats.total.leads;
            document.getElementById('overviewFacebook').textContent = stats.facebook.totalLeads;
            document.getElementById('overviewTikTok').textContent = stats.tiktok.totalLeads;
            document.getElementById('overviewSuccess').textContent = stats.total.bookings;
            document.getElementById('overviewQuality').textContent = stats.total.qualityPercent.toFixed(1) + '%';
            document.getElementById('overviewMonthCount').textContent = `(${stats.total.months} เดือน)`;

            // อัพเดท Quality Meters
            document.getElementById('fbQualityPercent').innerHTML = `${stats.facebook.qualityPercent}% ${stats.facebook.qualityPercent > 25 ? '↗️' : ''}`;
            document.getElementById('fbQualityRatio').textContent = `${stats.facebook.totalQuality}/${stats.facebook.totalLeads}`;
            document.getElementById('fbPeriodText').textContent = `(${stats.facebook.activeMonths} เดือน)`;
            
            document.getElementById('ttQualityPercent').textContent = stats.tiktok.qualityPercent + '%';
            document.getElementById('ttQualityRatio').textContent = `${stats.tiktok.totalQuality}/${stats.tiktok.totalLeads}`;
            document.getElementById('ttPeriodText').textContent = `(${stats.tiktok.activeMonths} เดือน)`;
            
            document.getElementById('overallQualityPercent').textContent = stats.total.qualityPercent.toFixed(1) + '%';
            document.getElementById('overallQualityRatio').textContent = `${stats.total.quality}/${stats.total.leads}`;

            // อัพเดทอัตราการแปลง
            document.getElementById('fbConversionRate').textContent = stats.facebook.conversionPercent + '%';
            document.getElementById('ttConversionRate').textContent = stats.tiktok.conversionPercent + '%';
            
            // อัพเดท Conversion Bars
            const maxConversion = Math.max(stats.facebook.conversionPercent, stats.tiktok.conversionPercent);
            if (maxConversion > 0) {
                document.getElementById('fbConversionBar').style.width = (stats.facebook.conversionPercent / maxConversion * 100) + '%';
                document.getElementById('ttConversionBar').style.width = (stats.tiktok.conversionPercent / maxConversion * 100) + '%';
            }

            // อัพเดทสถิติเพิ่มเติม
            const totalActiveMonths = stats.total.months;
            document.getElementById('totalMonthsDisplay').textContent = `${totalActiveMonths} เดือน`;
            document.getElementById('avgLeadsPerMonth').textContent = totalActiveMonths > 0 ? Math.round(stats.total.leads / totalActiveMonths) + ' คน' : '0 คน';
            document.getElementById('avgQualityPerMonth').textContent = totalActiveMonths > 0 ? Math.round(stats.total.quality / totalActiveMonths) + ' คน' : '0 คน';
            document.getElementById('avgBookingsPerMonth').textContent = totalActiveMonths > 0 ? (stats.total.bookings / totalActiveMonths).toFixed(1) + ' คัน' : '0 คัน';

            // อัพเดทช่วงวันที่
            updateDateRanges(stats);
        }

        function updateFacebookDisplay(fbStats) {
            document.getElementById('fbTotalLeads').textContent = fbStats.totalLeads;
            document.getElementById('fbQuality').textContent = fbStats.qualityPercent + '%';
            document.getElementById('fbQualityCount').textContent = fbStats.totalQuality;
            document.getElementById('fbAvgMonth').textContent = fbStats.avgPerMonth;
            document.getElementById('fbBookings').textContent = fbStats.totalBookings;
            document.getElementById('fbConversion').textContent = fbStats.conversionPercent + '%';
            document.getElementById('fbBookingCount').textContent = fbStats.totalBookings;
        }

        function updateTikTokDisplay(ttStats) {
            document.getElementById('ttTotalLeads').textContent = ttStats.totalLeads;
            document.getElementById('ttQuality').textContent = ttStats.qualityPercent + '%';
            document.getElementById('ttQualityCount').textContent = ttStats.totalQuality;
            document.getElementById('ttAvgMonth').textContent = ttStats.avgPerMonth;
            document.getElementById('ttBookings').textContent = ttStats.totalBookings;
            document.getElementById('ttConversion').textContent = ttStats.conversionPercent + '%';
            document.getElementById('ttBookingCount').textContent = ttStats.totalBookings;
        }

        function updateDateRanges(stats) {
            // หาช่วงวันที่สำหรับแต่ละ platform
            const fbData = chartData.facebook.filter(m => m.leads > 0);
            const ttData = chartData.tiktok.filter(m => m.leads > 0);
            
            let fbRange = '', ttRange = '', overallRange = '';
            
            if (fbData.length > 0) {
                const fbStart = fbData[0].month.replace(' 68', '');
                const fbEnd = fbData[fbData.length - 1].month.replace(' 68', '');
                fbRange = fbStart === fbEnd ? `${fbStart}` : `${fbStart} - ${fbEnd}`;
            }
            
            if (ttData.length > 0) {
                const ttStart = ttData[0].month.replace(' 68', '');
                const ttEnd = ttData[ttData.length - 1].month.replace(' 68', '');
                ttRange = ttStart === ttEnd ? `${ttStart}` : `${ttStart} - ${ttEnd}`;
            }

            // หาช่วงรวม
            const allData = [...fbData, ...ttData].sort((a, b) => {
                const monthOrder = ['ม.ค.', 'ก.พ.', 'มี.ค.', 'เม.ย.', 'พ.ค.', 'มิ.ย.', 'ก.ค.', 'ส.ค.', 'ก.ย.', 'ต.ค.', 'พ.ย.', 'ธ.ค.'];
                return monthOrder.indexOf(a.month.replace(' 68', '')) - monthOrder.indexOf(b.month.replace(' 68', ''));
            });
            
            if (allData.length > 0) {
                const overallStart = allData[0].month.replace(' 68', '');
                const overallEnd = allData[allData.length - 1].month.replace(' 68', '');
                overallRange = overallStart === overallEnd ? `${overallStart}` : `${overallStart} - ${overallEnd}`;
            }

            // อัพเดท UI
            document.getElementById('dataPeriodDisplay').textContent = `${overallRange} 2568 (${stats.total.months} เดือน)`;
            document.getElementById('dateRangeDisplay').textContent = `${overallRange} 2568`;
            document.getElementById('fbDateRange').textContent = `${fbRange} 2568 (${stats.facebook.activeMonths} เดือน)`;
            document.getElementById('ttDateRange').textContent = `${ttRange} 2568 (${stats.tiktok.activeMonths} เดือน)`;
            document.getElementById('fbHeaderPeriod').textContent = `ช่วงเวลา: ${fbRange} 2568 | ระยะเวลา: ${stats.facebook.activeMonths} เดือน`;
            document.getElementById('ttHeaderPeriod').textContent = `ช่วงเวลา: ${ttRange} 2568 | ระยะเวลา: ${stats.tiktok.activeMonths} เดือน`;

            // อัพเดทข้อความสรุป
            document.getElementById('fbSummaryText').textContent = 
                `${stats.facebook.totalLeads} leads, ${stats.facebook.totalBookings} bookings (${stats.facebook.conversionPercent}%), ${stats.facebook.totalQuality} คุณภาพ (${stats.facebook.qualityPercent}%)`;
            document.getElementById('ttSummaryText').textContent = 
                `${stats.tiktok.totalLeads} leads, ${stats.tiktok.totalBookings} bookings (${stats.tiktok.conversionPercent}%), ${stats.tiktok.totalQuality} คุณภาพ (${stats.tiktok.qualityPercent}%)`;
        }

        function updateMonthlyDetails() {
            updatePlatformMonthlyDetails('facebook', 'fbMonthlyDetails');
            updatePlatformMonthlyDetails('tiktok', 'ttMonthlyDetails');
        }

        function updatePlatformMonthlyDetails(platform, containerId) {
            const container = document.getElementById(containerId);
            const data = chartData[platform];
            
            let html = '';
            data.forEach(month => {
                const hasData = month.leads > 0;
                const cardClass = hasData ? 'month-card' : 'month-card no-data';
                
                html += `
                    <div class="${cardClass}">
                        <div class="month-title">🗓️ ${month.month.replace('68', '2568').replace('.', '')}</div>
                        <div class="month-stats">
                            <div class="stat-item">
                                <span class="stat-label">ลูกค้าใหม่:</span>
                                <span class="stat-value">${month.leads}</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">มีเบอร์ติดต่อ:</span>
                                <span class="stat-value quality">${month.quality} (${month.qualityPercent}%)</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">จองรถแล้ว:</span>
                                <span class="stat-value ${month.bookings > 0 ? 'highlight' : ''}">${month.bookings}</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">% ความสำเร็จ:</span>
                                <span class="stat-value">${month.leads > 0 ? (month.bookings / month.leads * 100).toFixed(2) : 0}%</span>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        function updateBookingLists() {
            updatePlatformBookingList('facebook', 'fbBookingList');
            updatePlatformBookingList('tiktok', 'ttBookingList');
        }

        function updatePlatformBookingList(platform, containerId) {
            const container = document.getElementById(containerId);
            const bookings = bookingData[platform];
            
            let html = '';
            bookings.forEach(booking => {
                html += `
                    <div class="booking-item">
                        <div class="booking-customer">${booking.customer}</div>
                        <div class="booking-details-text">
                            🚗 รุ่นรถ: ${booking.car}<br>
                            📅 วันที่: ${booking.date}<br>
                            👤 เซลล์: ${booking.sales}
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        // ฟังก์ชันการเปลี่ยน Tab
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
            
            setTimeout(() => {
                if (tabName === 'overview') {
                    createCombinedChart();
                } else if (tabName === 'facebook') {
                    createFacebookChart();
                } else if (tabName === 'tiktok') {
                    createTikTokChart();
                }
            }, 100);
        }

        // ฟังก์ชันสร้างกราฟ - รองรับข้อมูลแบบ Dynamic
        function createCombinedChart() {
            if (combinedChart) combinedChart.destroy();
            
            const ctx = document.getElementById('combinedChart').getContext('2d');
            
            // สร้างข้อมูลสำหรับ 12 เดือน
            const labels = thaiMonthNames.map(m => m.replace(' 68', ''));
            const fbData = new Array(12).fill(0);
            const ttData = new Array(12).fill(0);
            
            // เติมข้อมูล Facebook
            chartData.facebook.forEach(month => {
                const index = thaiMonthNames.indexOf(month.month);
                if (index !== -1) fbData[index] = month.leads;
            });
            
            // เติมข้อมูล TikTok
            chartData.tiktok.forEach(month => {
                const index = thaiMonthNames.indexOf(month.month);
                if (index !== -1) ttData[index] = month.leads;
            });
            
            combinedChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Facebook',
                            data: fbData,
                            backgroundColor: 'rgba(24, 119, 242, 0.8)',
                            borderColor: 'rgb(24, 119, 242)',
                            borderWidth: 2,
                            borderRadius: 5
                        },
                        {
                            label: 'TikTok',
                            data: ttData,
                            backgroundColor: 'rgba(255, 0, 80, 0.8)',
                            borderColor: 'rgb(255, 0, 80)',
                            borderWidth: 2,
                            borderRadius: 5
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                font: { size: 14, weight: 'bold' }
                            }
                        },
                        title: {
                            display: true,
                            text: 'ข้อมูลรายเดือนปี 2568 (ระบบรองรับ 12 เดือน)',
                            font: { size: 12 }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            ticks: { font: { size: 12 } }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { size: 12 } }
                        }
                    }
                }
            });
        }

        function createFacebookChart() {
            if (facebookChart) facebookChart.destroy();
            
            const ctx = document.getElementById('facebookChart').getContext('2d');
            facebookChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartData.facebook.map(d => d.month.replace(' 68', '')),
                    datasets: [
                        {
                            label: 'ลูกค้าใหม่',
                            data: chartData.facebook.map(d => d.leads),
                            borderColor: 'rgb(24, 119, 242)',
                            backgroundColor: 'rgba(24, 119, 242, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Lead คุณภาพ',
                            data: chartData.facebook.map(d => d.quality),
                            borderColor: 'rgb(155, 89, 182)',
                            backgroundColor: 'rgba(155, 89, 182, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'จองรถแล้ว',
                            data: chartData.facebook.map(d => d.bookings),
                            borderColor: 'rgb(46, 204, 113)',
                            backgroundColor: 'rgba(46, 204, 113, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: { font: { size: 14, weight: 'bold' } }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            ticks: { font: { size: 12 } }
                        }
                    }
                }
            });
        }

        function createTikTokChart() {
            if (tiktokChart) tiktokChart.destroy();
            
            const ctx = document.getElementById('tiktokChart').getContext('2d');
            tiktokChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartData.tiktok.map(d => d.month.replace(' 68', '')),
                    datasets: [
                        {
                            label: 'ลูกค้าใหม่',
                            data: chartData.tiktok.map(d => d.leads),
                            borderColor: 'rgb(255, 0, 80)',
                            backgroundColor: 'rgba(255, 0, 80, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Lead คุณภาพ',
                            data: chartData.tiktok.map(d => d.quality),
                            borderColor: 'rgb(155, 89, 182)',
                            backgroundColor: 'rgba(155, 89, 182, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'จองรถแล้ว',
                            data: chartData.tiktok.map(d => d.bookings),
                            borderColor: 'rgb(46, 204, 113)',
                            backgroundColor: 'rgba(46, 204, 113, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: { font: { size: 14, weight: 'bold' } }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            ticks: { font: { size: 12 } }
                        }
                    }
                }
            });
        }

        function updateCharts() {
            // รีเฟรชกราฟทั้งหมด
            setTimeout(() => {
                createCombinedChart();
                
                const activeTab = document.querySelector('.tab.active');
                if (activeTab) {
                    if (activeTab.textContent.includes('Facebook')) {
                        createFacebookChart();
                    } else if (activeTab.textContent.includes('TikTok')) {
                        createTikTokChart();
                    }
                }
            }, 100);
        }

        // ฟังก์ชันการพิมพ์รายงาน
        function printReport(section = 'all') {
            preparePrintLayout(section);
            
            const sectionNames = {
                'all': 'รายงานทั้งหมด',
                'overview': 'ภาพรวม',
                'facebook': 'Facebook',
                'tiktok': 'TikTok'
            };
            
            const confirmation = confirm(
                `🖨️ พิมพ์${sectionNames[section]}\n\n` +
                `📋 สิ่งที่จะพิมพ์:\n` +
                `• ${getSectionDescription(section)}\n\n` +
                `💡 เคล็ดลับ:\n` +
                `• เลือก "Save as PDF" เพื่อบันทึกเป็นไฟล์\n` +
                `• ปรับแต่ง Margins เป็น "Minimum"\n` +
                `• เลือก "More settings" → "Print headers and footers" = OFF\n\n` +
                `🔧 ระบบรองรับข้อมูลทั้ง 12 เดือน\n\n` +
                `ต้องการดำเนินการต่อหรือไม่?`
            );
            
            if (confirmation) {
                setTimeout(() => {
                    window.print();
                }, 100);
            }
        }

        function preparePrintLayout(section) {
            const now = new Date();
            document.getElementById('printDateTime').textContent = 
                `${now.toLocaleDateString('th-TH')} ${now.toLocaleTimeString('th-TH')}`;

            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('print-active');
            });

            switch(section) {
                case 'all':
                    document.querySelectorAll('.tab-content').forEach(content => {
                        content.classList.add('print-active');
                    });
                    break;
                case 'overview':
                    document.getElementById('overview').classList.add('print-active');
                    break;
                case 'facebook':
                    document.getElementById('facebook').classList.add('print-active');
                    break;
                case 'tiktok':
                    document.getElementById('tiktok').classList.add('print-active');
                    break;
            }

            const originalTitle = document.title;
            const sectionTitles = {
                'all': 'รายงานการติดตามลูกค้ามุ่งหวัง - ทั้งหมด',
                'overview': 'รายงานการติดตามลูกค้ามุ่งหวัง - ภาพรวม',
                'facebook': 'รายงานการติดตามลูกค้ามุ่งหวัง - Facebook',
                'tiktok': 'รายงานการติดตามลูกค้ามุ่งหวัง - TikTok'
            };
            document.title = sectionTitles[section] || originalTitle;

            setTimeout(() => {
                document.title = originalTitle;
            }, 1000);
        }

        function getSectionDescription(section) {
            const descriptions = {
                'all': 'ภาพรวม + Facebook + TikTok + กราฟทั้งหมด + รายละเอียดทุกเดือน (รองรับ 12 เดือน)',
                'overview': 'สรุปผลรวม + การเปรียบเทียบ + กราฟภาพรวม + สถิติ Dynamic',
                'facebook': 'ข้อมูล Facebook + กราฟ + รายละเอียดรายเดือน + ลูกค้าที่จอง',
                'tiktok': 'ข้อมูล TikTok + กราฟ + รายละเอียดรายเดือน + ลูกค้าที่จอง'
            };
            return descriptions[section] || 'ไม่ระบุ';
        }

