        // เริ่มต้นระบบ
        document.addEventListener('DOMContentLoaded', function() {
            // ตรวจสอบว่าเป็นโหมดดูหรือไม่
            checkViewerMode();
            
            updateAllDisplays();
            
            setTimeout(() => {
                createCombinedChart();
            }, 500);
        });

        // ==============================================
        // ระบบการแชร์แดชบอร์ด
        // ==============================================

        // ตรวจสอบโหมดดู
        function checkViewerMode() {
            const urlParams = new URLSearchParams(window.location.search);
            const sharedData = urlParams.get('data');
            const viewMode = urlParams.get('view');
            
            if (viewMode === 'shared' && sharedData) {
                enableViewerMode();
                loadSharedData(sharedData);
            }
        }

        // เปิดใช้โหมดดู
        function enableViewerMode() {
            document.body.classList.add('viewer-mode');
            document.getElementById('viewerNotice').style.display = 'block';
            
            // อัพเดทเวลาในโหมดดู
            const now = new Date();
            document.getElementById('sharedDataDate').textContent = 
                now.toLocaleDateString('th-TH') + ' ' + now.toLocaleTimeString('th-TH');
        }

        // โหลดข้อมูลที่แชร์มา
        function loadSharedData(encodedData) {
            try {
                // Decode Base64 และ Parse JSON
                const jsonString = atob(encodedData);
                const sharedChartData = JSON.parse(jsonString);
                
                // อัพเดทข้อมูล
                chartData = sharedChartData.chartData;
                if (sharedChartData.bookingData) {
                    bookingData.facebook = sharedChartData.bookingData.facebook || bookingData.facebook;
                    bookingData.tiktok = sharedChartData.bookingData.tiktok || bookingData.tiktok;
                }
                
                // อัพเดทการแสดงผล
                updateAllDisplays();
                
                console.log('✅ โหลดข้อมูลแชร์สำเร็จ');
            } catch (error) {
                console.error('❌ ไม่สามารถโหลดข้อมูลแชร์ได้:', error);
                alert('❌ ลิงก์แชร์ไม่ถูกต้องหรือเสียหาย');
            }
        }

        // สร้างลิงก์แชร์
        function generateShareLink() {
            try {
                // เตรียมข้อมูลสำหรับแชร์
                const shareData = {
                    chartData: chartData,
                    bookingData: bookingData,
                    timestamp: new Date().toISOString(),
                    version: '1.0'
                };
                
                // แปลงเป็น JSON และ Encode เป็น Base64
                const jsonString = JSON.stringify(shareData);
                const encodedData = btoa(jsonString);
                
                // สร้าง URL
                const baseUrl = window.location.origin + window.location.pathname;
                const shareUrl = `${baseUrl}?view=shared&data=${encodedData}`;
                
                // ตรวจสอบความยาว URL
                if (shareUrl.length > 8000) {
                    alert('⚠️ ข้อมูลมีขนาดใหญ่เกินไป\nระบบจะแชร์เฉพาะข้อมูลสำคัญ');
                    
                    // สร้างข้อมูลแบบย่อ
                    const compactData = {
                        chartData: {
                            facebook: chartData.facebook.map(m => ({
                                month: m.month,
                                leads: m.leads,
                                quality: m.quality,
                                bookings: m.bookings,
                                qualityPercent: m.qualityPercent
                            })),
                            tiktok: chartData.tiktok.map(m => ({
                                month: m.month,
                                leads: m.leads,
                                quality: m.quality,
                                bookings: m.bookings,
                                qualityPercent: m.qualityPercent
                            }))
                        },
                        timestamp: new Date().toISOString()
                    };
                    
                    const compactJson = JSON.stringify(compactData);
                    const compactEncoded = btoa(compactJson);
                    const compactUrl = `${baseUrl}?view=shared&data=${compactEncoded}`;
                    
                    copyToClipboard(compactUrl);
                } else {
                    copyToClipboard(shareUrl);
                }
                
                alert('✅ สร้างลิงก์แชร์สำเร็จ!\n\n📋 ลิงก์ได้ถูกคัดลอกไปที่คลิปบอร์ดแล้ว\n🔗 ส่งลิงก์นี้ให้ผู้อื่นเพื่อดูแดชบอร์ด\n\n⚠️ หมายเหตุ: ผู้ที่ได้รับลิงก์จะดูข้อมูลได้อย่างเดียว ไม่สามารถแก้ไขได้');
                
            } catch (error) {
                console.error('Error generating share link:', error);
                alert('❌ ไม่สามารถสร้างลิงก์แชร์ได้\nกรุณาลองใหม่อีกครั้ง');
            }
        }

        // คัดลอกลิงก์ปัจจุบัน
        function copyCurrentLink() {
            const currentUrl = window.location.href;
            copyToClipboard(currentUrl);
            alert('✅ คัดลอกลิงก์ปัจจุบันแล้ว!\n\n📋 ลิงก์อยู่ในคลิปบอร์ดแล้ว');
        }

        // ฟังก์ชันคัดลอกไปคลิปบอร์ด
        function copyToClipboard(text) {
            if (navigator.clipboard) {
                navigator.clipboard.writeText(text);
            } else {
                // Fallback สำหรับเบราว์เซอร์เก่า
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
            }
        }

        // สร้าง QR Code
        function generateQRCode() {
            // สร้างลิงก์แชร์ก่อน
            try {
                const shareData = {
                    chartData: chartData,
                    timestamp: new Date().toISOString()
                };
                
                const jsonString = JSON.stringify(shareData);
                const encodedData = btoa(jsonString);
                const baseUrl = window.location.origin + window.location.pathname;
                const shareUrl = `${baseUrl}?view=shared&data=${encodedData}`;
                
                // ล้าง QR Code เก่า
                document.getElementById('qrcode').innerHTML = '';
                
                // สร้าง QR Code ใหม่
                QRCode.toCanvas(document.getElementById('qrcode'), shareUrl, {
                    width: 256,
                    height: 256,
                    colorDark: '#2c3e50',
                    colorLight: '#ffffff',
                    margin: 2
                }, function (error) {
                    if (error) {
                        console.error('Error generating QR code:', error);
                        document.getElementById('qrcode').innerHTML = 
                            '<p style="color: #e74c3c;">❌ ไม่สามารถสร้าง QR Code ได้</p>';
                    }
                });
                
                // แสดง Modal
                document.getElementById('qrModal').style.display = 'block';
                
            } catch (error) {
                console.error('Error generating QR code:', error);
                alert('❌ ไม่สามารถสร้าง QR Code ได้');
            }
        }

        // ปิด QR Modal
        function closeQRModal() {
            document.getElementById('qrModal').style.display = 'none';
        }

        // ดาวน์โหลด QR Code
        function downloadQR() {
            const canvas = document.querySelector('#qrcode canvas');
            if (canvas) {
                const link = document.createElement('a');
                link.download = 'toyota-dashboard-qr.png';
                link.href = canvas.toDataURL();
                link.click();
                
                alert('✅ ดาวน์โหลด QR Code สำเร็จ!');
            } else {
                alert('❌ ไม่พบ QR Code ให้ดาวน์โหลด');
            }
        }

        // แชร์โซเชียล
        function shareToSocial() {
            // สร้างลิงก์แชร์
            const shareData = {
                chartData: chartData,
                timestamp: new Date().toISOString()
            };
            
            const jsonString = JSON.stringify(shareData);
            const encodedData = btoa(jsonString);
            const baseUrl = window.location.origin + window.location.pathname;
            const shareUrl = `${baseUrl}?view=shared&data=${encodedData}`;
            
            const stats = calculateStats();
            const shareText = `📊 รายงานการติดตามลูกค้ามุ่งหวัง - โตโยต้าพิธานปัตตานี\n\n` +
                            `💯 ลูกค้าทั้งหมด: ${stats.total.leads} คน\n` +
                            `🎯 Lead คุณภาพ: ${stats.total.qualityPercent.toFixed(1)}%\n` +
                            `🚗 จองรถแล้ว: ${stats.total.bookings} คัน\n\n` +
                            `📈 ดูรายงานฉบับเต็ม:`;
            
            // ตัวเลือกการแชร์
            const options = [
                {
                    name: 'LINE',
                    icon: '💬',
                    url: `https://social-plugins.line.me/lineit/share?url=${encodeURIComponent(shareUrl)}&text=${encodeURIComponent(shareText)}`
                },
                {
                    name: 'Facebook',
                    icon: '📘',
                    url: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}&quote=${encodeURIComponent(shareText)}`
                },
                {
                    name: 'Twitter',
                    icon: '🐦',
                    url: `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`
                },
                {
                    name: 'Email',
                    icon: '📧',
                    url: `mailto:?subject=${encodeURIComponent('รายงานแดชบอร์ด - โตโยต้าพิธานปัตตานี')}&body=${encodeURIComponent(shareText + '\n\n' + shareUrl)}`
                }
            ];
            
            let optionText = '🚀 เลือกช่องทางที่ต้องการแชร์:\n\n';
            options.forEach((option, index) => {
                optionText += `${index + 1}. ${option.icon} ${option.name}\n`;
            });
            optionText += '\n0. ❌ ยกเลิก';
            
            const choice = prompt(optionText);
            const choiceNum = parseInt(choice);
            
            if (choiceNum >= 1 && choiceNum <= options.length) {
                window.open(options[choiceNum - 1].url, '_blank', 'width=600,height=400');
            }
        }

        // ปิด Modal เมื่อคลิกนอกพื้นที่
        window.onclick = function(event) {
            const modal = document.getElementById('qrModal');
            if (event.target === modal) {
                closeQRModal();
            }
        };

        // ฟังก์ชันจัดการการแชร์แบบ Native (หากรองรับ)
        async function nativeShare() {
            if (navigator.share) {
                try {
                    const stats = calculateStats();
                    await navigator.share({
                        title: 'รายงานแดชบอร์ด - โตโยต้าพิธานปัตตานี',
                        text: `📊 ลูกค้าทั้งหมด: ${stats.total.leads} คน | 🎯 Lead คุณภาพ: ${stats.total.qualityPercent.toFixed(1)}% | 🚗 จองรถ: ${stats.total.bookings} คัน`,
                        url: window.location.href
                    });
                } catch (error) {
                    console.log('การแชร์ถูกยกเลิก', error);
                }
            } else {
                shareToSocial();
            }
        }

        // ฟังก์ชันเพิ่มข้อมูลเดือนใหม่ (สำหรับในอนาคต)
        function addMonthData(platform, month, leads, quality, bookings) {
            const monthData = {
                month: month,
                leads: leads,
                quality: quality,
                bookings: bookings,
                qualityPercent: leads > 0 ? Math.round((quality / leads * 100) * 10) / 10 : 0
            };
            
            // หาตำแหน่งที่ถูกต้องตามลำดับเดือน
            const monthIndex = thaiMonthNames.indexOf(month);
            let insertIndex = chartData[platform].length;
            
            for (let i = 0; i < chartData[platform].length; i++) {
                const existingMonthIndex = thaiMonthNames.indexOf(chartData[platform][i].month);
                if (monthIndex < existingMonthIndex) {
                    insertIndex = i;
                    break;
                }
            }
            
            chartData[platform].splice(insertIndex, 0, monthData);
            updateAllDisplays();
        }

        // ตัวอย่างการใช้งาน: เพิ่มข้อมูลเดือนกรกฎาคม
        // addMonthData('facebook', 'ก.ค. 68', 150, 45, 2);
        // addMonthData('tiktok', 'ก.ค. 68', 30, 8, 1);

        // ==============================================
        // ระบบการอัพโหลดและประมวลผลไฟล์ Excel
        // ==============================================

        // ตัวแปรเก็บข้อมูลสำรอง
        let originalChartData = JSON.parse(JSON.stringify(chartData));

        // ฟังก์ชันจัดการการอัพโหลดไฟล์
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                handleFileSelection(file);
            }
        });

        function handleFileSelection(file) {
            const fileName = file.name;
            const fileExt = fileName.split('.').pop().toLowerCase();
            
            if (!['xlsx', 'xls'].includes(fileExt)) {
                alert('❌ รองรับเฉพาะไฟล์ .xlsx, .xls เท่านั้น');
                document.getElementById('fileInput').value = '';
                return;
            }
            
            document.getElementById('uploadArea').innerHTML = `
                📁 เลือกไฟล์: ${fileName}<br>
                <small style="opacity: 0.7; color: #28a745;">✅ ไฟล์พร้อมประมวลผล</small>
            `;
            document.getElementById('uploadBtn').disabled = false;
        }

        // Drag & Drop support
        const uploadArea = document.getElementById('uploadArea');
        
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });
        
        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
        });
        
        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const file = files[0];
                document.getElementById('fileInput').files = files;
                handleFileSelection(file);
            }
        });

        async function processFile() {
            const fileInput = document.getElementById('fileInput');
            const file = fileInput.files[0];
            
            if (!file) {
                alert('กรุณาเลือกไฟล์ก่อน');
                return;
            }

            // แสดง loading
            document.getElementById('loading').style.display = 'block';
            document.getElementById('uploadBtn').disabled = true;
            document.getElementById('uploadBtn').textContent = '⏳ กำลังประมวลผล...';
            document.getElementById('loadingText').textContent = 'กำลังอ่านไฟล์ Excel...';

            try {
                // อ่านไฟล์
                const arrayBuffer = await file.arrayBuffer();
                document.getElementById('loadingText').textContent = 'กำลังประมวลผลข้อมูล...';
                
                // ประมวลผล Excel
                const result = await processExcelFile(arrayBuffer);
                
                if (result && (result.facebook.length > 0 || result.tiktok.length > 0)) {
                    // สำรองข้อมูลเดิม
                    originalChartData = JSON.parse(JSON.stringify(chartData));
                    
                    // อัพเดทข้อมูลใหม่
                    if (result.facebook.length > 0) {
                        chartData.facebook = result.facebook;
                    }
                    if (result.tiktok.length > 0) {
                        chartData.tiktok = result.tiktok;
                    }
                    
                    document.getElementById('loadingText').textContent = 'กำลังอัพเดทการแสดงผล...';
                    
                    // อัพเดท UI
                    updateAllDisplays();
                    
                    // อัพเดทเวลา
                    const now = new Date();
                    document.getElementById('lastUpdated').textContent = 
                        `📅 อัพเดทล่าสุด: ${now.toLocaleDateString('th-TH')} ${now.toLocaleTimeString('th-TH')}`;
                    
                    const fbCount = result.facebook.reduce((sum, month) => sum + month.leads, 0);
                    const ttCount = result.tiktok.reduce((sum, month) => sum + month.leads, 0);
                    const fbQuality = result.facebook.reduce((sum, month) => sum + month.quality, 0);
                    const ttQuality = result.tiktok.reduce((sum, month) => sum + month.quality, 0);
                    const fbMonths = result.facebook.filter(m => m.leads > 0).length;
                    const ttMonths = result.tiktok.filter(m => m.leads > 0).length;
                    
                    setTimeout(() => {
                        alert('✅ อัพเดทข้อมูลสำเร็จ! 🎉\n\n' + 
                              `📘 Facebook: ${fbMonths} เดือน (${fbCount} leads, ${fbQuality} มีเบอร์)\n` +
                              `🎵 TikTok: ${ttMonths} เดือน (${ttCount} leads, ${ttQuality} มีเบอร์)\n\n` +
                              `📊 รวมทั้งหมด: ${fbCount + ttCount} leads\n\n` +
                              `🔄 ระบบได้อัพเดทกราฟและสถิติทั้งหมดแล้ว`);
                    }, 500);
                    
                } else {
                    let errorMsg = '❌ ไม่พบข้อมูลที่ถูกต้องในไฟล์\n\n';
                    errorMsg += '🔍 กรุณาตรวจสอบ:\n';
                    errorMsg += '• รูปแบบไฟล์ (.xlsx, .xls)\n';
                    errorMsg += '• ชื่อ Sheet ต้องมี "facebook" หรือ "tiktok"\n';
                    errorMsg += '• โครงสร้างข้อมูลต้องมีคอลัมน์: ลำดับ, วันที่, ชื่อลูกค้า, เบอร์ติดต่อ\n';
                    errorMsg += '• ข้อมูลต้องเริ่มจากแถวที่ 4-5 (หลัง header)\n\n';
                    errorMsg += `📋 รูปแบบที่รองรับ:\n`;
                    errorMsg += `• Facebook: วันที่แบบ d/m/yy (เช่น 3/1/25)\n`;
                    errorMsg += `• TikTok: ชื่อเดือนภาษาไทย (เช่น เมษายน)`;
                    alert(errorMsg);
                }
                
            } catch (error) {
                console.error('Error processing file:', error);
                let errorDetails = error.message || 'ไม่ทราบสาเหตุ';
                
                alert('❌ เกิดข้อผิดพลาดในการประมวลผลไฟล์\n\n📝 รายละเอียด: ' + errorDetails + 
                      '\n\n💡 คำแนะนำ:\n• ตรวจสอบว่าไฟล์ไม่เสียหาย\n• ใช้ไฟล์ในรูปแบบ .xlsx, .xls\n• ตรวจสอบโครงสร้างข้อมูลให้ตรงกับไฟล์ต้นฉบับ\n• ลองปิดไฟล์ Excel ก่อนอัพโหลด');
            } finally {
                // ซ่อน loading
                document.getElementById('loading').style.display = 'none';
                document.getElementById('uploadBtn').disabled = false;
                document.getElementById('uploadBtn').textContent = '🔄 ประมวลผลข้อมูล';
                
                // รีเซ็ต upload area
                document.getElementById('uploadArea').innerHTML = `
                    📁 คลิกเพื่ออัพโหลดไฟล์ Excel ใหม่<br>
                    <small style="opacity: 0.7;">รองรับ: .xlsx, .xls | ต้องมี Sheet ชื่อ "facebook" หรือ "tiktok"</small>
                `;
                document.getElementById('fileInput').value = '';
                document.getElementById('uploadBtn').disabled = true;
            }
        }

        // ฟังก์ชันประมวลผลไฟล์ Excel
        async function processExcelFile(arrayBuffer) {
            const workbook = XLSX.read(arrayBuffer, {
                cellStyles: true,
                cellFormulas: true,
                cellDates: true,
                cellNF: true,
                sheetStubs: true
            });

            console.log('📊 Sheet names found:', workbook.SheetNames);

            const result = {
                facebook: [],
                tiktok: []
            };

            // ประมวลผล Facebook sheet
            const facebookSheetNames = workbook.SheetNames.filter(name => 
                name.toLowerCase().includes('facebook') || 
                name.toLowerCase().includes('fb') ||
                name.toLowerCase().includes('เฟสบุ๊ค') ||
                name.includes('68') // อาจจะเป็น "facebook 68"
            );
            
            if (facebookSheetNames.length > 0) {
                console.log(`📘 Processing Facebook sheet: ${facebookSheetNames[0]}`);
                const facebookData = processSheet(workbook.Sheets[facebookSheetNames[0]], 'Facebook');
                result.facebook = facebookData;
                console.log(`📘 Facebook: พบ ${facebookData.length} เดือน`);
            } else {
                // ลองหา sheet ที่มีข้อมูล Facebook โดยดูจากเนื้อหา
                for (let sheetName of workbook.SheetNames) {
                    const sheetData = XLSX.utils.sheet_to_json(workbook.Sheets[sheetName], { header: 1 });
                    const hasPageReference = sheetData.some(row => 
                        row && row.some(cell => 
                            cell && cell.toString().toLowerCase().includes('เพจ')
                        )
                    );
                    if (hasPageReference) {
                        console.log(`📘 Found Facebook data in sheet: ${sheetName}`);
                        const facebookData = processSheet(workbook.Sheets[sheetName], 'Facebook');
                        result.facebook = facebookData;
                        break;
                    }
                }
            }

            // ประมวลผล TikTok sheet
            const tiktokSheetNames = workbook.SheetNames.filter(name => 
                name.toLowerCase().includes('tiktok') || 
                name.toLowerCase().includes('tt') ||
                name.toLowerCase().includes('ติกต๊อก') ||
                (name.includes('68') && !name.toLowerCase().includes('facebook'))
            );
            
            if (tiktokSheetNames.length > 0) {
                console.log(`🎵 Processing TikTok sheet: ${tiktokSheetNames[0]}`);
                const tiktokData = processSheet(workbook.Sheets[tiktokSheetNames[0]], 'TikTok');
                result.tiktok = tiktokData;
                console.log(`🎵 TikTok: พบ ${tiktokData.length} เดือน`);
            } else {
                // ลองหา sheet ที่มีข้อมูล TikTok โดยดูจากเนื้อหา
                for (let sheetName of workbook.SheetNames) {
                    if (sheetName.toLowerCase().includes('facebook')) continue; // ข้าม Facebook sheet
                    
                    const sheetData = XLSX.utils.sheet_to_json(workbook.Sheets[sheetName], { header: 1 });
                    const hasTikTokReference = sheetData.some(row => 
                        row && row.some(cell => 
                            cell && (cell.toString().toLowerCase().includes('tiktok') ||
                                   cell.toString().includes('เมษายน') ||
                                   cell.toString().includes('พฤษภาคม'))
                        )
                    );
                    if (hasTikTokReference) {
                        console.log(`🎵 Found TikTok data in sheet: ${sheetName}`);
                        const tiktokData = processSheet(workbook.Sheets[sheetName], 'TikTok');
                        result.tiktok = tiktokData;
                        break;
                    }
                }
            }

            return result;
        }

        // ฟังก์ชันประมวลผล Sheet
        function processSheet(worksheet, platform) {
            console.log(`🔍 Processing ${platform} sheet...`);
            const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
            console.log(`📊 Total rows in ${platform}:`, jsonData.length);
            
            const monthlyData = {};

            // หา header row
            let headerRowIndex = -1;
            for (let i = 0; i < Math.min(10, jsonData.length); i++) {
                if (jsonData[i] && jsonData[i][0] && 
                    (jsonData[i][0].toString().includes('ลำดับ') || 
                     jsonData[i][0].toString().includes('ลำดับ'))) {
                    headerRowIndex = i;
                    break;
                }
            }

            if (headerRowIndex === -1) {
                console.warn(`ไม่พบ header row ใน ${platform} sheet`);
                // ลองใช้แถวที่ 3-4 เป็น default
                headerRowIndex = 3;
            }

            // ประมวลผลข้อมูล
            const dataStartRow = headerRowIndex + 1;
            
            for (let i = dataStartRow; i < jsonData.length; i++) {
                if (jsonData[i] && jsonData[i][0] && 
                    (typeof jsonData[i][0] === 'number' || !isNaN(parseInt(jsonData[i][0])))) {
                    
                    const record = {
                        ลำดับ: jsonData[i][0],
                        วันที่: jsonData[i][1], // คอลัมน์ B = index 1
                        ชื่อลูกค้า: jsonData[i][2],
                        เบอร์ติดต่อ: jsonData[i][3], // คอลัมน์ D = index 3
                        รุ่นรถ: jsonData[i][4],
                        เซลล์: jsonData[i][5],
                        จองแล้ว: jsonData[i][9] // คอลัมน์ J = index 9
                    };

                    if (record.วันที่) {
                        try {
                            const date = parseExcelDate(record.วันที่, platform);
                            if (date && !isNaN(date.getTime())) {
                                const monthKey = `${date.getFullYear()}-${(date.getMonth() + 1).toString().padStart(2, '0')}`;
                                
                                if (!monthlyData[monthKey]) {
                                    monthlyData[monthKey] = {
                                        month: formatMonthDisplay(date),
                                        leads: 0,
                                        bookings: 0,
                                        quality: 0,
                                        qualityPercent: 0
                                    };
                                }

                                monthlyData[monthKey].leads++;

                                // ตรวจสอบ Lead คุณภาพ (มีเบอร์ติดต่อ)
                                if (hasValidPhone(record.เบอร์ติดต่อ)) {
                                    monthlyData[monthKey].quality++;
                                }

                                // ตรวจสอบการจอง
                                if (record.จองแล้ว === '/' || 
                                    (record.จองแล้ว && record.จองแล้ว.toString().trim() !== '')) {
                                    monthlyData[monthKey].bookings++;
                                }
                            }
                        } catch (e) {
                            console.warn('Invalid date:', record.วันที่, e);
                        }
                    }
                }
            }

            // คำนวณเปอร์เซ็นต์ Lead คุณภาพ
            Object.keys(monthlyData).forEach(monthKey => {
                const data = monthlyData[monthKey];
                data.qualityPercent = data.leads > 0 ? 
                    parseFloat(((data.quality / data.leads) * 100).toFixed(1)) : 0;
            });

            const sortedData = Object.keys(monthlyData).sort().map(monthKey => monthlyData[monthKey]);
            console.log(`${platform} processed data:`, sortedData);
            return sortedData;
        }

        function parseExcelDate(dateValue, platform) {
            if (dateValue instanceof Date) {
                return dateValue;
            } else if (typeof dateValue === 'number') {
                // Excel serial date
                const baseDate = new Date(1900, 0, 1);
                const daysSince = dateValue - 1;
                return new Date(baseDate.getTime() + daysSince * 24 * 60 * 60 * 1000);
            } else if (typeof dateValue === 'string') {
                const dateStr = dateValue.toString().trim();
                
                if (platform === 'Facebook') {
                    // รูปแบบ d/m/yy เช่น "3/1/25"
                    if (dateStr.includes('/')) {
                        const parts = dateStr.split('/');
                        if (parts.length === 3) {
                            const day = parseInt(parts[0]);
                            const month = parseInt(parts[1]);
                            let year = parseInt(parts[2]);
                            
                            // แปลง yy เป็น yyyy
                            if (year < 100) {
                                year = year < 50 ? 2000 + year : 1900 + year;
                            }
                            
                            if (day >= 1 && day <= 31 && month >= 1 && month <= 12 && year >= 2020) {
                                return new Date(year, month - 1, day);
                            }
                        }
                    }
                } else if (platform === 'TikTok') {
                    // รูปแบบชื่อเดือนภาษาไทย
                    const thaiMonths = {
                        'มกราคม': 0, 'กุมภาพันธ์': 1, 'มีนาคม': 2,
                        'เมษายน': 3, 'พฤษภาคม': 4, 'มิถุนายน': 5,
                        'กรกฎาคม': 6, 'สิงหาคม': 7, 'กันยายน': 8,
                        'ตุลาคม': 9, 'พฤศจิกายน': 10, 'ธันวาคม': 11
                    };
                    
                    for (const [thaiMonth, monthIndex] of Object.entries(thaiMonths)) {
                        if (dateStr.includes(thaiMonth)) {
                            return new Date(2025, monthIndex, 1); // สมมติปี 2025 (พ.ศ. 2568)
                        }
                    }
                }
                
                // ลองแปลงแบบปกติ
                const parsedDate = new Date(dateStr);
                if (!isNaN(parsedDate.getTime())) {
                    return parsedDate;
                }
            }
            return null;
        }

        function formatMonthDisplay(date) {
            const monthNames = ['ม.ค.', 'ก.พ.', 'มี.ค.', 'เม.ย.', 'พ.ค.', 'มิ.ย.', 
                              'ก.ค.', 'ส.ค.', 'ก.ย.', 'ต.ค.', 'พ.ย.', 'ธ.ค.'];
            const year = date.getFullYear() + 543; // แปลงเป็น พ.ศ.
            const shortYear = year.toString().slice(-2); // เอาแค่ 2 หลัก
            return `${monthNames[date.getMonth()]} ${shortYear}`;
        }

        function hasValidPhone(phone) {
            return phone && 
                   phone !== null && 
                   phone !== '' && 
                   phone !== undefined &&
                   phone.toString().trim() !== '' &&
                   phone.toString().trim() !== '-' &&
                   phone.toString().trim() !== 'N/A';
        }

        // ฟังก์ชันเรียกคืนข้อมูลเดิม
        function restoreOriginalData() {
            if (confirm('🔄 ต้องการเรียกคืนข้อมูลเดิมหรือไม่?\n\nการดำเนินการนี้จะลบข้อมูลที่อัพโหลดล่าสุด')) {
                chartData = JSON.parse(JSON.stringify(originalChartData));
                updateAllDisplays();
                document.getElementById('lastUpdated').textContent = '📅 เรียกคืนข้อมูลเดิมแล้ว';
                alert('✅ เรียกคืนข้อมูลเดิมเรียบร้อยแล้ว');
            }
        }
    </script>
</body>
</html>
